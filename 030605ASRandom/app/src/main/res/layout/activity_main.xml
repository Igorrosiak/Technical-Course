<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="364dp"
        android:layout_height="125dp"
        android:background="@android:color/black"
        android:paddingTop="30sp"
        android:paddingBottom="10sp"
        android:text="Jogo do Random"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="64dp"
        android:background="#E1420101"
        android:onClick="gerar()"
        android:text="Gerar Número"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="442dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:hint="1º Número"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="232dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:hint="2º Número"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="373dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:background="#E1000000"
        android:text="Insira o 1º número abaixo:"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:background="#EB000000"
        android:text="Insira o 2º número abaixo:"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="314dp" />

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum número selecionado"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="557dp" />

</androidx.constraintlayout.widget.ConstraintLayout>